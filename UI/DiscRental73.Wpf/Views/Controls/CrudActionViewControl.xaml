<UserControl x:Class="DiscRental73.Wpf.Views.Controls.CrudActionViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiscRental73.Wpf.Views.Controls"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             xmlns:avm="clr-namespace:DiscRental73.Wpf.ViewModels.ActionViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance avm:BluRayDiscActionViewModel}">
    <Grid>
        <GroupBox Grid.Column="0" Header="BluRay-диски" Margin="3">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="Loaded">
                    <b:InvokeCommandAction Command="{Binding RefreshCommand }"/>
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <DockPanel>
                <Grid DockPanel.Dock="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Button fa5:Awesome.Content="Solid_Plus" Grid.Column="0" Grid.Row="0" Foreground="Green"/>
                    <Button fa5:Awesome.Content="Solid_UserEdit" Grid.Column="1" Grid.Row="0" Foreground="Blue"/>
                    <Button fa5:Awesome.Content="Solid_Ban" Grid.Column="0" Grid.Row="1" Foreground="Red"/>
                    <Button fa5:Awesome.Content="Solid_Retweet" Grid.Column="1" Grid.Row="1" Foreground="Orange" 
                            Command="{Binding RefreshCommand}"/>
                </Grid>
                <ListBox ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" 
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.IsContainerVirtualizable="True"
                         VirtualizingPanel.VirtualizationMode="Recycling">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </DockPanel>
        </GroupBox>
    </Grid>
</UserControl>
