<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dto="clr-namespace:DiscRental73.Domain.DtoModels.Dto;assembly=DiscRental73.Domain">
    <DataTemplate DataType="{x:Type dto:BluRayDiscDto}">
        <TextBlock>
            <TextBlock Text="{Binding Publisher}"/>
            <TextBlock Text="{Binding Title}"/>
        </TextBlock>
    </DataTemplate>
    <DataTemplate DataType="{x:Type dto:CdDiscDto}">
        <TextBlock>
            <TextBlock Text="{Binding Performer}"/>
            <TextBlock Text="{Binding Title}"/>
        </TextBlock>
    </DataTemplate>
    <DataTemplate DataType="{x:Type dto:DvdDiscDto}">
        <TextBlock>
            <TextBlock Text="{Binding Director}"/>
            <TextBlock Text="{Binding Title}"/>
        </TextBlock>
    </DataTemplate>
</ResourceDictionary>