<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:evm="clr-namespace:DiscRental73.Wpf.ViewModels.EntityViewModels"
                    xmlns:eiv="clr-namespace:DiscRental73.Wpf.Views.EntityInfoViews">
    <DataTemplate DataType="{x:Type evm:BluRayDiscViewModel}">
        <eiv:BluRayDiscInfoView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type evm:CdDiscViewModel}">
        <eiv:CdDiscInfoView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type evm:DvdDiscViewModel}">
        <eiv:DvdDiscInfoView DataContext="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>