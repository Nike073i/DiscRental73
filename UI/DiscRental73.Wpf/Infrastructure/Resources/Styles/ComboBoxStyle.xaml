<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ComboBoxItemBase" TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="ComboBoxBase" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource ComboBoxItemBase}"/>
    </Style>

    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBase}"/>
</ResourceDictionary>