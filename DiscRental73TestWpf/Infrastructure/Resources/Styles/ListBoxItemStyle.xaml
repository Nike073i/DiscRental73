<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ListBoxItemBase" TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignChoiceChipAccentListBoxItem}">
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="ListBoxBase" TargetType="ListBox" BasedOn="{StaticResource MaterialDesignListBox}">
        <Setter Property="ItemContainerStyle" Value="{StaticResource ListBoxItemBase}"/>
    </Style>

    <Style TargetType="ListBox" BasedOn="{StaticResource ListBoxBase}"/>



</ResourceDictionary>