<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TextBoxBase" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="FontFamily" Value="Times New Roman"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="3,2,0,2"/>
    </Style>

    <Style x:Key="ValidationTextBox" TargetType="TextBox" BasedOn="{StaticResource TextBoxBase}">
        <Style.Triggers>
            <Trigger Property="Validation.HasError"
                         Value="True">
                <Setter Property="ToolTip"
                            Value="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=(Validation.Errors)/ErrorContent}"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>